# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

alias env_run='{{ project_root }}/virtualenv/bin/envdir {{ project_root }}/env'
alias project_manage='env_run {{ project_root }}/virtualenv/bin/python {{ project_root }}/code/manage.py'
alias project_scrapy='env_run {{ project_root }}/virtualenv/bin/scrapy'
alias project_celery='env_run {{ project_root }}/virtualenv/bin/celery'
alias project_run='project_manage runserver 0.0.0.0:8001'
alias project_pip='{{ project_root }}/virtualenv/bin/pip'
alias project_freeze_requirements='project_pip freeze > {{ project_root }}/code/requirements.txt'

LANGUAGE=en_US.utf8
LC_ALL=en_US.utf8
LC_CTYPE=en_US.utf8
LC_COLLATE=en_US.utf8
export LANGUAGE LC_ALL LC_CTYPE LC_COLLATE

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

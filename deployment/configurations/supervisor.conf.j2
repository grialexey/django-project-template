[program:{{ project_name }}]
environment=LANG="en_US.utf8", LC_ALL="en_US.UTF-8", LC_LANG="en_US.UTF-8"
directory = {{ project_root }}/code
command = {{ project_root }}/virtualenv/bin/envdir {{ project_root }}/env {{ project_root }}/virtualenv/bin/gunicorn fighters.wsgi:application -c {{ project_root }}/conf/gunicorn.conf.py
user = {{ project_name }}
loglevel = debug
stdout_logfile = {{ project_root }}/logs/supervisor.log
stderr_logfile = {{ project_root }}/logs/supervisor.error.log
autostart = true
autorestart = true
redirect_stderr = true
